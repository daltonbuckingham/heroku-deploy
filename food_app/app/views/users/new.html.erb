

<h1>Signup</h1>

<h5> Have an account? </h5>
<%if current_user %>
Welcome <%= current_user.name %>
<%= link_to "Logout", session_path, method: :delete %>
<% else %>
<%= link_to "Sign Up", new_user_path if !@is_signup%>
<%= link_to "Log In", new_session_path if !@is_login%>
<% end %>




<%= form_for @user do |f| %>
	<%= f.text_field :name, placeholder: "Username" %>
	<%= f.text_field :email, placeholder: "E-mail" %>
	<%= f.password_field :password, placeholder: "Password" %>
	<%= f.password_field :password_confirmation, placeholder: "Password" %>
	<%= f.submit "Sign Up" %>
<% end %>

